@page "/counter"

<PageTitle>Counter</PageTitle>

@using BlazorApp.Data
@inject IHealthService _healthService

<h1>Counter</h1>

<p role="status">Current count: @_currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="ResetCount">Reset</button>

@code {

    private int _currentCount = 0;    

    protected override async Task OnInitializedAsync()
    {
        _currentCount = await _healthService.GetCount();
    }


    private async Task IncrementCount()
    {
        _currentCount = await _healthService.IncrementCount();
    }

    private async Task ResetCount()
    {
        await _healthService.ResetCount();
        _currentCount = 0;
    }

}
